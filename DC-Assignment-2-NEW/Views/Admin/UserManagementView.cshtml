<div id="main">
    <h1> User Management</h1>
    <input type="text" id="search-bar" placeholder="Search by email">
    <button id="search-btn" onclick="handleUserSearch()">Search</button>
    <!-- Clear Search Button -->
    <button id="clear-search" onclick="clearUserSearch()">Clear Search</button>
    <br />
    <br />
    <button id="create-user" onclick="createUser()">Create New User</button>

    <table id="user-table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Account No</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="user-table-body">
            <!-- User rows will be added here dynamically -->
        </tbody>
    </table>
</div>

<div id="edit-modal" class="modal" style="display:none">
    <div class="edit-modal-content">
        <h2>Edit User Information</h2><br /><br />
        <label> Email : </label><input type="text" id="new-email" placeholder="New Email"><br/>
        <label> Password : </label><input type="text" id="new-password" placeholder="New Password"><br />
        <label> Address : </label><input type="text" id="new-address" placeholder="New Address"><br />
        <label> Phone : </label><input type="text" id="new-phone" placeholder="New Phone"><br />

        <button id="confirm">Confirm</button>
        <button id="cancel">Cancel</button>
    </div>
</div>

<div id="delete-modal" class="modal">
    <div class="modal-content">
        <p>Are you sure you want to delete this user?</p>
        <p>Username: <span id="deleteUsername"></span></p>
        <p>Email: <span id="deleteEmail"></span></p>
    </div>
    <div class="modal-actions">
        <button id="confirmDelete">Confirm</button>
        <button id="cancelDelete">Cancel</button>
    </div>
</div>

<div id="createUserModal" class="modal">
    <div class="modal-content">
        <h2>Create New User</h2>
        <form id="createUserForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required><br>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br>

            <label for="address">Address:</label>
            <input type="text" id="address" name="address"><br>

            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="phone"><br>

            <label for="pictureUrl">Picture URL:</label>
            <input type="url" id="pictureUrl" name="pictureUrl"><br>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br>

            <button type="submit"> Create </button>
            <button type="button" id="cancel-create">Cancel</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/site.js"></script>